@{
    ViewData["Title"] = "Dashboard";
}

<div id="wrapper">

    <div id="page-wrapper">
        <div class="header">

        </div>
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="board">
                        <div class="panel panel-primary topimg">

                            <!---  <img src="assets/img/cute-white.png" width="1340px" class="" alt="User Image"> -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="panel panel-default chartJs">
                        <div class="panel-heading">
                            <div class="card-title">
                                <div class="title">Department Chart</div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <div id="donutchart" style="width: 400px; height: 500px;"></div>
                        </div>
                    </div>

                </div>
                <div class="col-md-8">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Student Tables
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                                    <tr>
                                        <th>Name</th>
                                        <th>Department</th>
                                        <th>Address</th>
                                        <th>Age</th>
                                    </tr>
                                    @if (ViewBag.Data != null)
                                    {
                                        foreach (var item in ViewBag.Data)
                                        {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.DepartmentName
                                    </td>
                                    <td>
                                        @item.Address
                                    </td>
                                    <td>
                                        @item.Age
                                    </td>

                                </tr>

                                        }
                                    }
</table>
</div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>

            </div>
            <!-- /. ROW  -->
        </div>
        <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
</div>

@* Load datatable css *@
<link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/assets/js/dataTables/dataTables.bootstrap.css" rel="stylesheet" />

@section Scripts{
    <script src="~/Content/assets/js/dataTables/jquery.dataTables.js"></script>
    <script src="~/Content/assets/js/dataTables/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
    <!-- Custom Js -->
    <script src="~/Content/assets/js/custom-scripts.js"></script>
}